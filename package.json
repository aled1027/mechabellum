{
  "name": "mechabellum-sim",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "sim:checksum": "tsx src/sim/runChecksum.ts",
    "replay:validate": "tsx src/sim/replayValidator.ts",
    "balance:report": "tsx src/tools/balanceReport.ts",
    "load:test": "tsx src/tools/loadTest.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
